{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run BlogPlatform.API via dotnet run",
      "type": "coreclr",
      "request": "launch",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/BlogPlatform.API"
      ],
      "cwd": "${workspaceFolder}/BlogPlatform.API",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
